<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

    <TextView
        android:id="@+id/tutorial_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEFAULT LOL"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tutorial_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAY LOL"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:layout_below="@+id/tutorial_name"/>


    <TextView
        android:id="@+id/tutorial_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIME LOL"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:layout_below="@+id/tutorial_name"
        android:layout_toRightOf="@+id/tutorial_day"/>

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/user_icon" />

    <TextView
        android:id="@+id/tutorial_student_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COUNT LOL"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/userIcon"
        />

    </RelativeLayout>

</android.support.v7.widget.CardView>