<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/ic_projects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_projects"
            android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEFAULT LOL"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/ic_projects"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/created_date_label"
        android:text="Date Created: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ic_projects"
        android:layout_below="@id/project_name"
        />

    <TextView
        android:id="@+id/created_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEFAULT LOL"
        android:layout_marginLeft="8dp"
        android:textSize="12sp"
        android:layout_below="@+id/project_name"
        android:layout_toRightOf="@+id/created_date_label"/>

    <TextView
        android:id="@+id/updated_date_label"
        android:text="Last Updated:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project_name"
        android:layout_toRightOf="@+id/created_date"/>

    <TextView
        android:id="@+id/updated_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEFAULT LOL"
        android:layout_marginLeft="8dp"
        android:textSize="12sp"
        android:layout_below="@+id/project_name"
        android:layout_toRightOf="@+id/updated_date_label"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>